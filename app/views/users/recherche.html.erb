
<style>
    table,th,td
    {
        border:1px solid black;
        border-collapse:collapse;
    }
    th,td
    {
        padding:5px;
    }
</style>

<% index.each do |user| %>
<table border : 1px>

  <tr>
    <th style="text-align:center" rowspan="2" bgcolor= <%=maincolor(user.avatar.path(:small)) %>>
      <%= image_tag user.avatar.url(:small) %>
    </th>
    <td><%= user.pseudo%></td>
  </tr>
  <tr>
    <td><%=user.description%></td>
  </tr>

</table>

<%end%>